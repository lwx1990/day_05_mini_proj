<form method="GET" action="/search">
    
    <div class="form-group">
        <label for="searchNews">News Search</label>
        <input type="text" name="searchNews" id="searchNews" class="form-control" placeholder="Search...">
    </div>

    <div class="d-flex justify-content-between">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="country1" value="us">
            <img src="us.png" alt="">
        </div>

        <div class="form-check form-check-inline">
             <input class="form-check-input" type="radio" name="country" id="country2" value="uk">
             <img src="uk.png" alt="">
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="country3" value="fr">
            <img src="fr.png" alt="">
        </div>

    </div>
    

    <div class="d-flex justify-content-between">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="country4" value="sg">
            <img src="sg.png" alt="">
        </div>
         <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="country5" value="jp">
            <img src="jp.png" alt="">
        </div>

         <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="country6" value="cn">
            <img src="cn.png" alt="">
         </div>

    </div>

   

    <select class="custom-select" name="catergories">
        <option selected>Catergories</option>
        <option value="business">Business</option>
        <option value="entertainment">Entertainment</option>
        <option value="health">Health</option>
        <option value="science">Science</option>
        <option value="sports">Sports</option>
        <option value="technology">Technology</option>
    </select>

    <div class="d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-lg btn-dark">Search</button>
    </div>
  

    
    


</form>